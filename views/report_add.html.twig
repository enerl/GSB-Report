{% extends "layout.html.twig" %}
{% set visitReportMenu = true %}

{% block title %}Nouveau rapport de visite{% endblock %}

{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>
    <div class="well">
        <form class="form-horizontal" role="form" action="/reports/" method="post">
            <div class="form-group">
                <label class="col-sm-3 col-sm-offset-2 control-label">Practitien</label>
                    <div class="col-sm-5 col-md-4">
                        <select class="form-control" name="practitioners">
                            {% for practitioner in practitioners %}
                                <option value="">{{ practitioner.firstName }} {{ practitioner.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 col-sm-offset-2 control-label">Date</label>
                    <div class="col-sm-5 col-md-4">
                        <input name="date" type="text" class="form-control" autofocus>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 col-sm-offset-2 control-label">Motif</label>
                    <div class="col-sm-5 col-md-4">
                        <textarea name="purpose" rows="6" cols="30" class="form-control" autofocus></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-3 col-sm-offset-2 control-label">Bilan</label>
                    <div class="col-sm-5 col-md-4">
                        <textarea name="assessment" rows="6" cols="30" class="form-control" autofocus></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-3 col-sm-offset-5">
                    <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-search"></span> Ajouter</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}