{% extends "layout.html.twig" %}
{% set visitReportMenu = true %}

{% block title %}Vos rapports de visite{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% if reports %}
    <div class="table-responsive">
        <table class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>pratitien</th>
                    <th>Ville</th>
                    <th>Motif</th>
                </tr>
            </thead>
            {% for report in reports %}
                <tr>
                    <td>{{ report.date }}</td>
                    <td>{{ report. .firstName }}  {{ report.practitionerId.name }}</td>
                    <td>{{ report.practitionerId.city }}</td>
                    <td>{{ report.purpose }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% else %}
    <div class="alert alert-warning">Aucun praticien trouv√©.</div>
{% endif %}   
{% endblock %}